<div class="row">
    <div class="small-12 columns">
        <h3>Sign in</h3>
        <%= form_for(:session, url: sessions_path) do |f| %>
            <%= f.label :email %>
            <%= f.text_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.submit 'Sign in', class: 'button tiny round' %>
        <% end %>
        <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
    </div>
</div>
