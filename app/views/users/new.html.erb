<div class="row">
    <div class="small-12 columns">
        <h3>Sign Up</h3>
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :email %>
            <%= f.text_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
            <%= f.submit 'Create my Account', class: 'button tiny round' %>
        <% end %>
    </div>
</div>
