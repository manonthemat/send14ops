<% if @user.errors.any? %>
    <div id='error_explanation' class='error'>
        The form contains <%= pluralize(@user.errors.count, "error") %>
        <ul>
            <% @user.errors.full_messages.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    </div>
<% end %>
